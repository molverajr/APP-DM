<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.firebaseloginkotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirebaseLoginKotlin"
        tools:targetApi="31">
        <activity
            android:name=".TestActivity"
            android:exported="false" />
        <activity
            android:name=".activities.VideosActivity"
            android:exported="false"
            android:label="@string/title_activity_videos"
            android:theme="@style/Theme.FirebaseLoginKotlin.NoActionBar" />
        <activity
            android:name=".activities.UserAccount"
            android:exported="false" />
        <activity
            android:name=".activities.PatronesBasicosActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CuriousFactActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CheckEmailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SingUpActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SingInActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>